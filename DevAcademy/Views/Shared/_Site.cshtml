<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/images/458910.png" type="image/icon type">
    <link rel="stylesheet" href="~/fontawesome-free-6.1.1-web/css/all.css">
</head>
<body>
    <input type="checkbox" name="main-nav-toggle" id="main-nav-toggle" checked />
    <header class="site-header">
        <div class="wrapper">
            <nav class="site-nav left">
                <ul>
                    <li><a href="/Home/Register">Courses</a></li>
                    <li><a href="/Home/About">About us</a></li>
                </ul>
            </nav>
            <div class="site-logo">
                <img src="~/images/458910.png" alt="">
                <a class="caption" href="/">Academy</a>
            </div>
            <label for="main-nav-toggle" id="toggle"><i class="fab fa-xing"></i>Menu</label>
            <nav class="site-nav right">
                <ul>
                    <li><a href="/Home/Contacts">Contacts</a></li>
                    <li><a href="/Home/Login">Login</a></li>
                    <li><a href="/Home/Register">Register</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="site">
        @RenderBody()
    </div>
    <footer class="site-footer">
        <div class="wrapper">
            <div class="upper-div">
                <div class="left">
                    <p class="caption">Ready to start out courses?</p>
                    <p class="caption">Our mission is to provide a free, <br /> world-class education to anyone, anywhere.</p>
                    <p class="caption">Dev Academy is a 501(c)(3) nonprofit organization. <br /> <a href="">Donate</a> or <a href="https://github.com/georgianastasov">Volunteer</a> today!</p>
                </div>
                <div class="right">
                    <p>Links</p>
                    <ul>
                        <li><a href="/Home/Register">Courses</a></li>
                        <li><a href="/Home/About">About us</a></li>
                        <li><a href="/Home/Contacts">Contacts</a></li>
                        <li><a href="/Home/Contacts">Help</a></li>
                        <li><a href="/Home/Register">Sing up</a></li>
                    </ul>
                </div>
            </div>
            <div class="lowwer-div">
                <p>© 2022 Dev Academy</p>
                <a href="">Terms of use</a>
                <a href="">Privacy policy</a>
                <a href="">Cookie Notice</a>
            </div>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
