            <div class="site-top">
                <p class="caption">Section Courses</p>
                <a class="btt create" href="/Admin/CreateCourse">Create Course</a>
            </div>
            @if (@courses.Count() > 0)
            {
                <table class="dashboard-table" style="">
                    <thead>
                        <tr>
                            <th>Identical</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Points</th>
                            <th>CreatedDate</th>
                            <th>Sections</th>
