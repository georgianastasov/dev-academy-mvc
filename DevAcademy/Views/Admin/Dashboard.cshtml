                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.AccountType</td>
                                <td>@Crypting.DeCrypt(@user.Password)</td>
                                <td>@user.CreatedDate</td>
