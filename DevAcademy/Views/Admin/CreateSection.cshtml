@model Section
@{
    ViewData["Title"] = "Create Section";
    Layout = "_LogAdmin";
}
@{
    Admin admin = ViewData["Admin"] as Admin;
    IEnumerable<Course> courses = ViewData["Courses"] as IEnumerable<Course>;
}
<div class="site-dashboard">
    <div class="site-left">
        <p class="site-title">Admin Dashboard</p>
        <nav class="navigation-account">
            <ul>
                <li>Admin</li>
                <li>
                    <a href="">@admin.Username</a>
                </li>
            </ul>
        </nav>
        <nav class="navigation-admin">
            <ul>
                <li><a href="/Admin/Dashboard">Back</a></li>
            </ul>
        </nav>
    </div>
    <div class="site-right">
        <form method="post" asp-action="CreateSection">
            <div class="site-top">
                <p class="caption">Create Section</p>
            </div>
            <div class="box-form">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <div class="box">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="box">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" rows="10" cols="55"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="box">
                        <label asp-for="Text"></label>
                        <textarea asp-for="Text" rows="15" cols="85"></textarea>
                        <span asp-validation-for="Text"></span>
                    </div>
                    <div class="box">
                        <label asp-for="CourseID"></label>
                        <select asp-for="CourseID" class="form-control" aria-required="true">
                            <option selected disabled>Select Course</option>
                            @foreach (var course in courses)
                            {
                                <option value="@course.Id">@course.Title</option>
                            }
                        </select>
                    </div>
                    <div class="box-buttons">
                        <input type="submit" class="add" value="Create"/>
                        <a class="" href="/Admin/Dashboard">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>